{
  "name": "High-Spec Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "hostRequirements": {
    "cpus": 12,
    "memory": "12gb",
    "storage": "120gb"
  },
  "forwardPorts": [3000, 8000, 8080, 5000, 9000],
  "portsAttributes": {
    "3000": {
      "label": "App",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Web Server",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "HTTP",
      "onAutoForward": "notify"
    }
  }
}
